<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
	
   
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="120dp"
        android:background="@drawable/map_side_menu"
        android:layout_marginTop="67dp"
        android:id="@+id/side_menu"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- 기기별 해상도 무시하고 일단 dp로 높이 지정 -->
	    
	    
	    <Button 
	        android:id="@+id/btn_search"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:text=" "
	        android:textSize="20sp"
	        android:textColor="#4C4C4C"
	        android:textStyle="bold"
	        android:gravity="left|center_vertical"
	        android:background="@drawable/search"/>
	   
	    
	   <LinearLayout 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="vertical">
	    <Button 
	        android:hint="true"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:id="@+id/btn_books"
	        android:gravity="left|center_vertical"
	        android:layout_gravity="right"
	        android:text=" "
	        android:background="@drawable/books_normal"
	        android:layout_marginLeft="8dp"
	        android:onClick="categoryClick"
	        />
	    <Button 
	        android:hint="false"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:id="@+id/btn_organization"
	        android:textColor="#000000"
	        android:layout_gravity="right"
	        android:text=" "
	        android:gravity="left|center_vertical"
	        android:background="@drawable/organization_normal"
	        android:layout_marginLeft="7dp"
	        android:onClick="categoryClick"
	        />
	    <Button 
	        android:hint="false"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:id="@+id/btn_stay"
	        android:textColor="#000000"
	        android:gravity="left|center_vertical"
	        android:layout_gravity="right"
	        android:text=" "
	        android:background="@drawable/stay_normal"
	        android:layout_marginLeft="7dp"
	        android:onClick="categoryClick"
	        />
	    <Button 
	        android:hint="false"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:id="@+id/btn_restaurant"
	        android:textColor="#000000"
	        android:gravity="left|center_vertical"
	        android:layout_gravity="right"
	        android:text=" "
	        android:background="@drawable/restaurant_normal"
	        android:layout_marginLeft="9dp"
	        android:onClick="categoryClick"
	        />
	    <Button 
	        android:hint="false"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:id="@+id/btn_tour"
	        android:textColor="#000000"
	        android:gravity="left|center_vertical"
	        android:layout_gravity="right"
	        android:text=" "
	        android:background="@drawable/tour_normal"
	        android:layout_marginLeft="10dp"
	        android:onClick="categoryClick"
	        />
	    <Button 
	        android:hint="false"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:id="@+id/btn_ent"
	        android:textColor="#000000"
	        android:gravity="left|center_vertical"
	        android:layout_gravity="right"
	        android:text=" "
	        android:background="@drawable/entertainment_normal"
	        android:layout_marginLeft="7dp"
	        android:onClick="categoryClick"
	        />
	    
	    </LinearLayout>
	  
	   <Button 
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:text=" "
	        android:gravity="left|center_vertical"
	        android:textColor="#4C4C4C"
	        android:textStyle="bold"
	        android:onClick="viewHotPlace"
	       	android:background="@drawable/hotplace"/> 
	   
	    <Button
	       android:layout_width="match_parent"
	       android:layout_height="35dp"
	       android:text=" "
	       android:textColor="#4C4C4C"
	       android:textStyle="bold"
	       android:background="@drawable/mybook"
	       android:onClick="viewMyBook"
	       />
	    
	   <Button
	       android:layout_width="match_parent"
	       android:layout_height="35dp"
	       android:text=" "
	       android:textColor="#4C4C4C"
	       android:textStyle="bold"
	       android:background="@drawable/myprofile"
	       android:onClick="viewProfile"
	       />
	   
	  
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/menu_bar"
        android:orientation="horizontal" 
        android:layout_alignParentRight="true"
        android:background="@drawable/map_top_menu">
        <Button 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:id="@+id/btn_category"
            android:background="@drawable/map_top_menu_icon"
        />
		    
        <EditText
            android:id="@+id/edit_search_keyword"
            android:layout_marginLeft="20dp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:layout_gravity="center"
            android:background="@null"
            android:lines="1"
            android:singleLine="true"
            android:text=""
            android:ems="10"
            android:layout_weight="0.7"
            android:imeOptions="actionSearch" >
        </EditText>
	    
        <Button 
	            android:id="@+id/btn_clear"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/clear_btn"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="20dp"
	            android:visibility="invisible"/>
	        
        <Button
		        android:id="@+id/btn_search_keyword"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:layout_gravity="center"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
		        android:layout_toRightOf="@+id/editText1"
		        android:background="@drawable/map_top_menu_search"
		        android:textSize="20sp" />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/search_history_list"
        android:layout_marginTop="68dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/pagebackground">
    </ListView>
    
	<fragment
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/map"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    class="com.google.android.gms.maps.MapFragment" >
	</fragment>
	
</RelativeLayout>