<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="10dp"
    	android:background="@drawable/book_row_item_background"
    	android:orientation="vertical" >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_margin="16dp"
	        >
		    <ImageView
		        android:id="@+id/book_row_writer_icon"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:scaleType="centerCrop"
		    />
		    <com.facebook.widget.ProfilePictureView
                android:id="@+id/facebook_profile_pic"
                android:layout_height="40dp"
                android:layout_width="40dp"
                app:preset_size="small"
                app:is_cropped="true"
                android:visibility="gone"
                />
		    
			<LinearLayout
			     android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical"
	        	android:layout_marginLeft="7dp"
			    >
			    <TextView
			        android:id="@+id/book_row_writer"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="1dp"
			        android:layout_marginTop="3dp"
			        android:textSize="15sp"
			        android:textColor="#5D5D5D"
			        />
			    <TextView
			        android:id="@+id/book_row_time"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="1dp"
			        android:layout_marginTop="3dp"
			        android:textColor="#747474"
			        android:textSize="13sp"
			        />
		    </LinearLayout>
		 </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_margin="6dp"
		        android:gravity="center"
		        >
				<TextView
			          android:id="@+id/book_row_content"
			          android:layout_marginTop="5dp"
			          android:layout_marginLeft="10dp"
			          android:layout_marginBottom="15dp"
			          android:layout_gravity="left"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:minLines="3"
			          android:textColor="#4C4C4C"
			          android:textSize="15sp"
			          android:text="ffffffffffffffff" />
				<RelativeLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    >
			    		<ImageView 
			    		    android:id="@+id/book_row_img_line"
			    		    android:layout_width="258dp"
			    		    android:layout_height="258dp"
			    		    android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
			    		    android:background="@drawable/review_image_background"
			    		    />
				    	
				        <ImageView
				            android:id="@+id/book_row_img"
				            android:layout_width="300dp"
				            android:layout_height="300dp"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:adjustViewBounds="true"
				            android:scaleType="centerCrop"
				            android:visibility="gone"
				            />
				        <ImageView 
				            android:id="@+id/book_row_play_img"
				            android:layout_width="50dp"
				            android:layout_height="50dp"
				            android:layout_centerHorizontal="true"
				            android:layout_centerVertical="true"
				            android:src="@drawable/play_button"
				            android:visibility="gone"/>
					    
				</RelativeLayout>
	    </LinearLayout>
	    <LinearLayout
	      	android:layout_marginLeft="10dp"
	      	android:layout_marginTop="15dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        >
		    <TextView 
		            android:id="@+id/book_row_like_txt"
		            android:layout_width="wrap_content"
		            android:layout_height="26dp"
		            android:textSize="13sp"
		            android:gravity="right"
		            android:textColor="#747474"
		            />    
		    <TextView 
		        	android:layout_marginLeft="10dp"
		            android:id="@+id/book_row_comment_txt"
		            android:layout_width="wrap_content"
		            android:layout_height="26dp"
		            android:textSize="13sp"
		            android:gravity="right"
		            />
	    </LinearLayout>

	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:background="#5D5D5D" />

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/book_row_menu_background"
	        android:orientation="horizontal" >

		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        >
		        <ImageButton
		            android:id="@+id/book_row_like_btn"
		            android:layout_width="match_parent"
		            android:layout_height="26dp"
		            android:layout_weight="1"
		            android:background="#00000000"
		            android:src="@drawable/like_it" />
		
		        <ImageButton
		            android:id="@+id/book_row_comment_btn"
		            android:layout_width="match_parent"
		            android:layout_height="26dp"
		            android:layout_weight="1"
		            android:background="#00000000"
		            android:src="@drawable/comment" />
	
		        <ImageButton
		            android:id="@+id/book_row_share_btn"
		            android:layout_width="match_parent"
		            android:layout_height="26dp"
		            android:layout_weight="1"
		            android:background="#00000000"
		            android:src="@drawable/share" />
	        </LinearLayout>

	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>