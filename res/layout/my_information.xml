<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebackground"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_margin="15dp"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/book_row_item_background"
    	android:orientation="vertical"
	    >
	    <TextView
	        android:id="@+id/txt_title_information"
	        android:layout_margin="15dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:background="@drawable/title_myprofile"
	        android:text=" " />
	
	    <ImageView
	        android:id="@+id/img_profile"
	        android:layout_width="250dp"
	        android:layout_height="250dp"
	        android:layout_gravity="center"
	        android:layout_margin="5dp"
	        android:scaleType="centerCrop"
	        android:src="@drawable/noprofile3"
	         />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_margin="10dp">
	      
	         <LinearLayout 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          >
	
	           <TextView
	              android:id="@+id/txt_email"
	              android:layout_width="90dp"
	              android:textColor="#FFFFFF"
	              android:gravity="center"
	              android:layout_height="wrap_content"
	              android:background="@drawable/back_clicked"
	              android:textSize="12sp"
	              android:text="E-mail" />
	
	          <TextView
	              android:id="@+id/txt_personal_email"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="10dp"
	              android:textSize="12sp"
	              android:text="" />
	          
	      </LinearLayout>
	      
	      <LinearLayout 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="10dp"
	          >
	
	          <TextView
	              android:id="@+id/txt_name"
	              android:layout_width="90dp"
	              android:textColor="#FFFFFF"
	              android:gravity="center"
	              android:layout_height="wrap_content"
	              android:background="@drawable/back_clicked"
	              android:textSize="12sp"
	              android:text="Name" />
	
	          <TextView
	              android:id="@+id/txt_personal_name"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="10dp"
	              android:textSize="12sp"
	              android:text="" />
	      </LinearLayout>
	      
	      <LinearLayout 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:visibility="gone"
	          >
	
	           <TextView
	              android:id="@+id/txt_password"
	              android:layout_width="90dp"
	              android:textColor="#FFFFFF"
	              android:gravity="center"
	              android:layout_height="wrap_content"
	              android:background="@drawable/back_clicked"
	              android:text="Password" />
	
	          <TextView
	              android:id="@+id/txt_personal_password"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginLeft="10dp"
	              android:inputType="textPassword"
	              android:text="" />
	      </LinearLayout>
	      
	           
	    </LinearLayout>
	    
	 </LinearLayout>
	 <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:layout_marginRight="10dp">
	      
	    <Button
	        android:id="@+id/btn_modify"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="mOnClick"
	        android:background="@drawable/btn_edit"
	        android:textSize="20dp" />
	    
	    <Button
	        android:id="@+id/btn_logout"
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="mOnClick"
	        android:background="@drawable/btn_logout"
	        android:layout_marginRight="10dp"
	        android:textSize="20dp" />
	    </LinearLayout>
</LinearLayout>