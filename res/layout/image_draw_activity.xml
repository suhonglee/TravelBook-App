<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/haha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.54"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_btn"
             >

	        <SeekBar
	            android:id="@+id/penSize"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone"
	             />
        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="60dp"
		        android:background="@drawable/edit_image_bottom_background"
		        android:gravity="center_vertical|center_horizontal"
        	    android:id="@+id/select_color_layout"
        	    >
		        <ImageView
	            android:id="@+id/black"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/black_normal"/>
		        
		        <ImageView
	            android:id="@+id/blue"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/blue_normal"/>
		        
		        <ImageView
	            android:id="@+id/red"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/red_normal"/>
			            
	            <ImageView
	            android:id="@+id/deepblue"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/deepblue_normal"/>
	            
	            <ImageView
	            android:id="@+id/deepgreen"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/deepgreen_normal"/>
	            
	            <ImageView
	            android:id="@+id/deeporange"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	           android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/deeporange_normal"/>
	            
	            <ImageView
	            android:id="@+id/green"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/green_normal"/>
	            
	            <ImageView
	            android:id="@+id/orange"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/orange_normal"/>
	            
	            <ImageView
	            android:id="@+id/pink"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/pink_normal"/>
	            
	            <ImageView
	            android:id="@+id/purple"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/purple_normal"/>
	            
	            <ImageView
	            android:id="@+id/skyblue"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/skyblue_normal"/>
	            
	            <ImageView
	            android:id="@+id/white"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/white_normal"/>
	            
	            <ImageView
	            android:id="@+id/yellow"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/yellow_normal"/>
	            
	            <ImageView
	            android:id="@+id/palette"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:background="@drawable/color"/>
	         </LinearLayout>
        </RelativeLayout>
            
        <RelativeLayout 
            android:id="@+id/image_layout" 
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent" 
            android:layout_height="match_parent" 
            >
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_image_bottom_background"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_clear"
		/>
        <Button
            android:id="@+id/btn_color"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/palette"
        />

        <Button
            android:id="@+id/btn_line_size"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/pen_size"
        />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_save"
        />

        <Button
            android:id="@+id/btn_option"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/frame_icon"
        />

    </LinearLayout> 

    
 	   
</LinearLayout>