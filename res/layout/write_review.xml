<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebackground"
    android:orientation="vertical">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/book_row_item_background"
	    android:gravity="center_horizontal"
	    android:layout_margin="10dp"
	    android:orientation="vertical" >
	    <com.travelbook.customview.ImgSlide
	        android:id="@+id/write_review_imgSlide"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
			android:background="#00000000"
	        >
	    </com.travelbook.customview.ImgSlide>
	    <ImageView 
	        android:id="@+id/write_review_video"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:src="@drawable/video_preview"
	        />
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:background="#FFFFFF"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"/>
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
			<EditText
			    android:id="@+id/write_review_text"
			    android:gravity="top"
			    android:minLines="5" 
			    android:maxLines="10"
			    android:background="#70FFFFFF"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"/>
		</LinearLayout>
		
	</LinearLayout>
    <RelativeLayout 
	    android:background="#00000000"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		<Button android:layout_width="wrap_content"
	        android:text=" "
	        android:onClick="mOnClick"
	        android:layout_height="wrap_content"
	        android:background="@drawable/upload"
	        android:layout_alignParentLeft="true"
	        android:id="@+id/write_review_upload"/>
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    >
			<Button android:layout_width="wrap_content"
		        android:text=" "
		        android:background="@drawable/write"
		        android:onClick="mOnClick"
		        android:layout_height="wrap_content"
		        android:id="@+id/write_review_ok"/>
		    <Button android:layout_width="wrap_content"
		        android:onClick="mOnClick"
		        android:layout_height="wrap_content"
		        android:text=" "
		        android:background="@drawable/cancel"
		        android:id="@+id/write_review_cancel"/>
		</LinearLayout>
    </RelativeLayout>
</LinearLayout>