<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebackground"
    tools:context=".Book" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_book_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/map_top_menu_icon" />

        <LinearLayout
        	android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="5"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/book_name"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/title_bookmain"
                android:gravity="center"
                android:text=" "
                android:textSize="24sp" />
		    
            <ImageView 
                android:background="#751400"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                />
        </LinearLayout>
    </RelativeLayout> <!-- 최상단 리니어 end -->

    <LinearLayout
        android:id="@+id/book_nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/book_nothing_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing review"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="bottom" >

        <ListView
            android:id="@+id/listView_book_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0px" >
        </ListView>
    </LinearLayout>

</RelativeLayout>